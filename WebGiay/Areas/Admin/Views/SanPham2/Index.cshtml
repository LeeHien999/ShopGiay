@model IEnumerable<ShopOnlineConnection.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}
<head>
    <style>
        .table-container {
  margin: 20px auto;
  max-width: 800px;
  text-align: center;
}

.product-table {
  border-collapse: collapse;
  width: 100%;
}

.product-table th,
.product-table td {
  border: 1px solid #ddd;
  padding: 8px;
}

.product-table th {
  background-color: #f2f2f2;
  font-weight: bold;
}

.product-table td img {
  max-width: 100%;
}

.edit-btn,
.delete-btn {
  color: #666;
  display: inline-block;
  margin-right: 10px;
  text-decoration: none;
}

.edit-btn:hover,
.delete-btn:hover {
  color: #000;
}

.add-product {
  margin-top: 20px;
  text-align: right;
}

.add-product a {
  background-color: #007bff;
  border-radius: 4px;
  color: #fff;
  display: inline-block;
  padding: 8px 16px;
  text-decoration: none;
}

.add-product a:hover {
  background-color: #0069d9;
}

    (max-width: 768px) {
  .product-table td,
  .product-table th {
    display: block;
    text-align: center;
  }

  .product-table td:first-child {
    font-weight: bold;
    margin-top: 10px;
  }

  .product-table td:nth-child(2)::before {
    content: "Tên sản phẩm: ";
    font-weight: bold;
  }

  .product-table td:nth-child(3)::before {
    content: "Giá: ";
    font-weight: bold;
  }

  .product-table td:nth-child(4)::before {
    content: "Tình trạng: ";
    font-weight: bold;
  }

  .product-table td:nth-child(5)::before {
    content: "Ảnh sản phẩm: ";
    font-weight: bold;
    margin-top: 10px;
  }

  .product-table td img {
    margin: 10px auto;
    max-width: 80%;
  }

  .add-product {
    text-align: center;
  }

  .add-product a {
    display: block;
    margin-top: 10px;
  }
}

        .table-container {
            position: relative;
        }

        .add-product {
            position: absolute;
            top: 0;
            right: 0;
        }


    </style>
</head>

<div class="table-container">
    <h2>Quản lý sản phẩm</h2>
    <table class="product-table">
        <thead>
            <tr>
                <th>Mã SP</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Tình trạng</th>
                <th style="width: 13%">Ảnh sản phẩm</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.MaSanPham</td>
                <td>@item.TenSanPham</td>
                <td>@String.Format("{0:#,##0.##} đ", (decimal)item.Gia)</td>
                <td>@item.TinhTrang</td>
                <td><img src="/Asset/images/@item.HinhChinh" alt="@item.TenSanPham" /></td>
                <td>
                    <a href="@Url.Action("Edit","SanPham2",new {id = @item.MaSanPham})" class="edit-btn"><i class="fas fa-edit"></i></a>
                    <a href="@Url.Action("XoaTamThoi","SanPham2",new {id = @item.MaSanPham})" class="delete-btn"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>   
    <div class="add-product">
        <a href="@Url.Action("Create", "SanPham2")"><i class="fas fa-plus"></i> Add</a>
    </div>
</div>

