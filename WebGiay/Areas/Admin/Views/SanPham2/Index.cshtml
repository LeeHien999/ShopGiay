@model PagedList.IPagedList<ShopOnlineConnection.SanPham>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}
<head>
    <style>
        .table-container {
            margin: 20px auto;
            max-width: 800px;
            text-align: center;
        }

        .product-table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 20px;
        }

            .product-table th,
            .product-table td {
                border: 1px solid #ddd;
                padding: 8px;
            }

            .product-table th {
                background-color: #f2f2f2;
                font-weight: bold;
            }

            .product-table td img {
                max-width: 100%;
            }

        .edit-btn,
        .delete-btn {
            color: #666;
            display: inline-block;
            margin-right: 10px;
            text-decoration: none;
        }

            .edit-btn:hover,
            .delete-btn:hover {
                color: #000;
            }

        .add-product {
            margin-top: 20px;
            text-align: right;
        }

        .add-product {
            text-align: left;
            margin: 20px 0;
        }

            .add-product a {
                display: inline-block;
                padding: 10px 20px;
                background-color: #0066CC;
                color: #fff;
                text-decoration: none;
                border-radius: 5px;
            }

                .add-product a:hover {
                    background-color: #0069d9;
                }

        (max-width: 768px) {
            .product-table td, .product-table th

        {
            display: block;
            text-align: center;
        }

        .product-table td:first-child {
            font-weight: bold;
            margin-top: 10px;
        }

        .product-table td:nth-child(2)::before {
            content: "Tên sản phẩm: ";
            font-weight: bold;
        }

        .product-table td:nth-child(3)::before {
            content: "Giá: ";
            font-weight: bold;
        }

        .product-table td:nth-child(4)::before {
            content: "Tình trạng: ";
            font-weight: bold;
        }

        .product-table td:nth-child(5)::before {
            content: "Ảnh sản phẩm: ";
            font-weight: bold;
            margin-top: 10px;
        }

        .product-table td img {
            margin: 10px auto;
            max-width: 80%;
        }

        .table-container {
            position: relative;
        }
    </style>
</head>

<div class="table-container">
    <h2>Quản lý sản phẩm</h2>
    <div class="add-product">
        <a href="@Url.Action("Create", "SanPham2")"><i class="fas fa-plus"></i> Add</a>
    </div>
    <table class="product-table">
        <thead>
            <tr>
                <th>Mã SP</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Tình trạng</th>
                <th style="width: 13%">Ảnh sản phẩm</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaSanPham</td>
                    <td>@item.TenSanPham</td>
                    <td>@String.Format("{0:#,##0.##} đ", (decimal)item.Gia)</td>
                    <td>@item.TinhTrang</td>
                    <td><img src="/Asset/images/@item.HinhChinh" alt="@item.TenSanPham" /></td>
                    <td>
                        <a href="@Url.Action("Edit","SanPham2",new {id = @item.MaSanPham})" class="edit-btn"><i class="fas fa-edit"></i></a>
                        <a href="@Url.Action("Delete","SanPham2",new {id = @item.MaSanPham})" class="delete-btn"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-12 text-center">
            <div class="block-27">
                <ul>
                    <li>@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</li>
                </ul>

            </div>
        </div>
    </div>
</div>

