
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}


<style>
    .container {
        margin: auto;
        width: 50%;
        padding: 10px;
    }

    #img-preview-chinh {
        max-width: 200px;
        max-height: 200px;
        margin: 10px 0;
    }

    #img-preview-1 {
        max-width: 200px;
        max-height: 200px;
        margin: 10px 0;
    }

    #img-preview-2 {
        max-width: 200px;
        max-height: 200px;
        margin: 10px 0;
    }

    #img-preview-3 {
        max-width: 200px;
        max-height: 200px;
        margin: 10px 0;
    }

    #img-preview-4 {
        max-width: 200px;
        max-height: 200px;
        margin: 10px 0;
    }
</style>
<head>
    <script src="~/Areas/AssetAdmin/ckeditor5-build-classic/ckeditor.js"></script>
</head>

<div class="container">
    <h2>Thêm Sản phẩm</h2>
    @using (Html.BeginForm("Create", "SanPham2", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <label for="ma-giay">Mã giày:</label>
            <input type="text" class="form-control" id="ma-giay" placeholder="Nhập mã giày" name="MaSanPham">
        </div>
        <div class="form-group">
            <label for="ma-loai-giay">Mã loại giày:</label>

            @Html.DropDownList("MaLoaiSanPham", (IEnumerable<SelectListItem>)ViewBag.MaLoaiSanPham, "-- Chọn loại sản phẩm --", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="ten-giay">Tên giày:</label>
            <input type="text" class="form-control" id="ten-giay" placeholder="Nhập tên giày" name="TenSanPham">
        </div>
        <div class="form-group">
            <label for="hinh">Hình Chính:</label>
            <div class="input-group">
                <input type="file" class="form-control" id="hinhchinh" name="HinhChinh" onchange="previewImage(event, 'img-preview-chinh')">
                <span class="input-group-addon"><img id="img-preview-chinh" src="#" alt="Hình sản phẩm"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="hinh">Hình 1:</label>
            <div class="input-group">
                <input type="file" class="form-control" id="hinh1" name="Hinh1" onchange="previewImage(event, 'img-preview-1')">
                <span class="input-group-addon"><img id="img-preview-1" src="#" alt="Hình sản phẩm"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="hinh">Hình 2:</label>
            <div class="input-group">
                <input type="file" class="form-control" id="hinh2" name="Hinh2" onchange="previewImage(event, 'img-preview-2')">
                <span class="input-group-addon"><img id="img-preview-2" src="#" alt="Hình sản phẩm"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="hinh">Hình 3:</label>
            <div class="input-group">
                <input type="file" class="form-control" id="hinh3" name="Hinh3" onchange="previewImage(event, 'img-preview-3')">
                <span class="input-group-addon"><img id="img-preview-3" src="#" alt="Hình sản phẩm"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="hinh">Hình 4:</label>
            <div class="input-group">
                <input type="file" class="form-control" id="hinh4" name="Hinh4" onchange="previewImage(event, 'img-preview-4')">
                <span class="input-group-addon"><img id="img-preview-4" src="#" alt="Hình sản phẩm"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="gia">Giá:</label>
            <input type="number" class="form-control" id="gia" placeholder="Nhập giá giày" name="Gia">
        </div>
        <div class="form-group">
            <label for="ghi-chu">Ghi chú:</label>
            <textarea class="form-control" id="ghi-chu" placeholder="Nhập ghi chú" name="GhiChu" rows="5"></textarea>
        </div>

        <div class="form-group">
            <label for="nsx">Nhà sản xuất:</label>
            @Html.DropDownList("MaNhaSanXuat", (IEnumerable<SelectListItem>)ViewBag.MaNhaSanXuat, "-- Chọn nhà sản xuất --", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="thong-so">Thông tin:</label>
            <textarea class="form-control" id="thong-so" placeholder="Nhập thông số" name="CauHinh" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Thêm</button>
    }



        <script>
            function previewImage(event, imgPreviewId) {
                var reader = new FileReader();
                reader.onload = function () {
                    var output = document.getElementById(imgPreviewId);
                    output.src = reader.result;
                };
                reader.readAsDataURL(event.target.files[0]);
            }
                ClassicEditor
                    .create(document.querySelector('#thong-so'))
                .catch( error => {
                    console.error(error);
                });

            ClassicEditor
                .create(document.querySelector('#ghi-chu'))
                .catch(error => {
                    console.error(error);
                });
    </script>
</div>



